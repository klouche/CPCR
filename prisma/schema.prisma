generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id               String       @id
  active           Boolean      @default(true)
  name             String
  organizationCode String
  organization     Organization @relation(fields: [organizationCode], references: [code])

  regional    String[] @default([])
  hidden      String?
  description String?
  complement  String?
  aliases     String[] @default([])
  research    String[] @default([])
  phase       String[] @default([])
  category    String[] @default([])
  output      String[] @default([])
  url         String[] @default([])
  docs        String[] @default([])
  contact     String[] @default([])

  links     ServiceLink[]
  documents ServiceDocument[]
  contacts  ServiceContact[]
  clicks    ServiceClick[]

  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  embedding ServiceEmbedding?
}

model ServiceLink {
  id        String  @id @default(cuid())
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  label String
  url   String
  order Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([serviceId, order])
}

model ServiceDocument {
  id        String  @id @default(cuid())
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  title String
  url   String
  order Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([serviceId, order])
}

enum ContactType {
  EMAIL
  PHONE
  URL
  OTHER
}

model ServiceContact {
  id        String  @id @default(cuid())
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  type  ContactType @default(EMAIL)
  value String // "info@..." or "+41..." or "https://..."
  label String? // optional: "General contact"
  order Int         @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([serviceId, order])
}

model Organization {
  // We use the symbolic organization code as the primary key, e.g. "SBP", "SE"
  code     String    @id // "SBP"
  label    String // human-readable label, e.g. "swissethics"
  fullName String
  idPrefix String // e.g. "SE"
  users    User[] // relation from User
  services Service[]
}

model User {
  id                  String       @id @default(uuid())
  email               String       @unique
  password            String // hashed
  organizationCode    String
  organization        Organization @relation(fields: [organizationCode], references: [code])
  isSuperAdmin        Boolean      @default(false)
  forcePasswordChange Boolean      @default(false)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([organizationCode])
}

model ServiceEmbedding {
  serviceId String  @id
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  // pgvector column (Prisma doesn't natively model vector dims well, so we use Unsupported)
  embedding Unsupported("vector")

  // useful metadata
  model     String
  dim       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("service_embedding")
}

model ServiceClick {
  id String @id @default(cuid())

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  assetType String // "link" | "document" | "contact"
  assetId   String // ServiceLink.id / ServiceDocument.id / ServiceContact.id
  assetLabel String? // stores the label/title/value of the clicked asset at click time
  
  // Denormalize for fast org-scoped queries (no joins)
  organizationCode     String
  userOrganizationCode String?
  isAuthenticated      Boolean @default(false)

  referrer  String?
  userAgent String?

  createdAt DateTime @default(now())

  @@index([serviceId, createdAt])
  @@index([organizationCode, createdAt])
}
